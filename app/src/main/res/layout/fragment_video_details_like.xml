<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- YouTube Player View -->
    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="16:9" />

    <!-- Content ScrollView - Full height without bottom margin -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/youtube_player_view"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="120dp">

            <!-- Video Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Video Title -->
                <TextView
                    android:id="@+id/tv_video_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiêu đề video sẽ hiển thị ở đây và có thể dài nhiều dòng"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Video Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_views_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2M lượt xem"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_upload_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 ngày trước"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Like Button -->
                    <LinearLayout
                        android:id="@+id/btn_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/ic_like"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_thumb_up"
                            app:tint="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/tv_like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10K"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                    <!-- Dislike Button -->
                    <LinearLayout
                        android:id="@+id/btn_dislike"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/ic_dislike"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_dislike"
                            app:tint="?android:attr/textColorSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Không thích"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                    <!-- Share Button -->
                    <LinearLayout
                        android:id="@+id/btn_share_action"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_share"
                            app:tint="?android:attr/textColorSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chia sẻ"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                    <!-- Save Button -->
                    <LinearLayout
                        android:id="@+id/btn_save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/ic_save"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_save"
                            app:tint="?android:attr/textColorSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lưu"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginHorizontal="16dp" />

            <!-- Channel Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- Channel Avatar -->
                <ImageView
                    android:id="@+id/iv_channel_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop" />

                <!-- Channel Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tv_channel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên Kênh"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/tv_subscriber_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2M subscriber"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Subscribe Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="ĐĂNG KÝ"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#FF0000"
                    app:cornerRadius="18dp"
                    android:paddingHorizontal="16dp"
                    android:minWidth="0dp" />

            </LinearLayout>

            <!-- Video Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả video sẽ hiển thị ở đây. Có thể bao gồm nhiều thông tin chi tiết về nội dung video..."
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="3"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/btn_show_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiển thị thêm"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorSecondary"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"
                    android:layout_marginTop="4dp" />

                <!-- RecyclerView for related videos -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_videos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_video"
                    android:clipToPadding="false" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Expandable Playlist View -->
    <LinearLayout
        android:id="@+id/playlist_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="?android:attr/colorBackground"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/youtube_player_view"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Playlist Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?android:attr/colorBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Video đã thích"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_playlist_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/979"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/btn_close_playlist"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Channel Info in Playlist -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="?android:attr/colorBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi Thien Ngo"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

<!--            <ImageView-->
<!--                android:layout_width="16dp"-->
<!--                android:layout_height="16dp"-->
<!--                android:src="@drawable/ic_lock"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                app:tint="#CCCCCC" />-->

        </LinearLayout>

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:background="?android:attr/colorBackground">

            <ImageView
                android:id="@+id/btn_repeat"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_repeat"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                app:tint="@color/icon_tint" />

            <ImageView
                android:id="@+id/btn_shuffle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_mix_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginStart="16dp"
                app:tint="@color/icon_tint" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btn_more_playlist"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                app:tint="@color/icon_tint" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_like_videos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:paddingBottom="56dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_like_video" />

    </LinearLayout>

    <!-- Next Video Section - Overlay at bottom -->
    <LinearLayout
        android:id="@+id/ln_list_like_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/bg_music_bar"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:layout_marginBottom="56dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_list_music"
            android:layout_marginEnd="12dp"
            app:tint="@color/icon_tint" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiếp theo: "
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HAKO - Sunny ♪"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video đã thích"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/979"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Collapse/Expand Button -->
        <ImageView
            android:id="@+id/btn_collapse"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_keyboard_arrow_up"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>