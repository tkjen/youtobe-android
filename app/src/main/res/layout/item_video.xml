<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:background="#0F0F0F"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Video Thumbnail Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="12dp">

        <!-- Video Thumbnail -->
        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#1A1A1A"
            android:src="@drawable/placeholder_thumbnail" />

        <!-- Duration Badge -->
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:background="@drawable/duration_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:text="12:34"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium" />

    </FrameLayout>

    <!-- Video Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Channel Avatar -->
        <ImageView
            android:id="@+id/img_channel_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_avatar" />

        <!-- Video Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Video Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề video mẫu có thể dài và hiển thị trên nhiều dòng"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="4dp" />

            <!-- Channel Name -->
            <TextView
                android:id="@+id/tv_channel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên kênh"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <!-- Views and Upload Time -->
            <TextView
                android:id="@+id/tv_views_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2M lượt xem • 2 giờ trước"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Menu Button -->
        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

    </LinearLayout>

</LinearLayout>